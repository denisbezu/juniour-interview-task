{% extends '::base.html.twig' %}
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
        <form class="form-horizontal"  action="{{ path('login') }}" method="post">
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Email:</label>
            <div class="col-sm-5">
                <input type="text" class="form-control" id="username" name="_username" placeholder="Введите email" value="{{ last_username }}" >
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="pwd">Пароль:</label>
            <div class="col-sm-5">
                <input type="password" class="form-control" id="password" name="_password" placeholder="Введите пароль">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Вход</button>
            </div>
        </div>
    </form>
{% endblock %}